<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="My Android App"
        android:gravity="center" android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_storage_perm"
        android:text="Storage Permissions" android:layout_gravity="center"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_list"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>